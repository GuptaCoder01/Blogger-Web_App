<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('./partials/head') %>
		<title>Add Nnew Blog Page</title>
</head>

<body>
	<%- include('./partials/nav') %>
		<div class="container mt-3">

			<!-- <form action="/blog" method="post"> -->
			<form action="/blog" method="post" enctype="multipart/form-data">
				<div class="mb-3">
					<label for="coverImage" class="form-label">Cover Image</label>
					<input type="file" class="form-control" id="coverImage" name="coverImage"
						aria-describedby="coverImage">
				</div>

				<div class="mb-3">
					<label for="title" class="form-label">Title</label>
					<input type="text" class="form-control" id="text" name="title" aria-describedby="title">
				</div>

				<div class="mb-3">
					<label for="floatingTextarea2">Body</label>
					<textarea class="form-control" id="floatingTextarea2" name="body" style="height: 100px"></textarea>
				</div>

				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
		</div>
		</form>
		<%- include('./partials/script') %>
</body>

</html>